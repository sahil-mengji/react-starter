{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"jsx": "react-jsx",
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"strict": false,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
